<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Navigáció mutatása/elrejtése</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' class="navbar-brand"}}Bibliaolvasó{{/link-to}}
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <button {{action "previousChapter"}} {{bind-attr disabled="noPreviousChapter"}} id="prev-chapter" class="btn btn-link pager-link">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </button>
        </li>
        <li>
          <div class="navbar-form">
            <div class="form-group">
              {{input type="text" value=abbr class="form-control" action="query" role="search"}}
            </div>
          </div>
        </li>
        <li>
          <button {{action "nextChapter"}} {{bind-attr disabled="noNextChapter"}} id="next-chapter" class="btn btn-link pager-link">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </button>
        </li>
        <li class="dropdown">
          {{view Ember.Select
                 contentBinding=translations
                 optionValuePath="content.id"
                 optionLabelPath="content.title"
                 valueBinding=translation}}
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Személyes <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li class="dropdown-header">Rendezés</li>
            <li><a href="#">Folyó nézet</a></li>
            <li><a href="#">Lista nézet</a></li>
            <li class="divider"></li>
            <li class="dropdown-header">Betűméret</li>
            <li><a href="#">Kicsi</a></li>
            <li><a href="#">Közepes</a></li>
            <li><a href="#">Nagy</a></li>
          </ul>
        </li>
      </ul>
    </div>

  </div>
</div>

<div class="container">
  {{outlet}}
</div>
